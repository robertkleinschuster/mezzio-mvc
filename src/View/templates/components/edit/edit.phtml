<form method="post">
    <div class="row row-cols-1 row-cols-sm-<?= $component->getCols() ?>">
        <?php $prevChapter = null ?>
        <?php foreach ($fields as $key => $field): ?>
            <?php if ($key == 0 || !$field->isAppendToPrevious()): ?>
                <div class="col">
            <?php endif ?>
            <?php if ($field->isShow($model->getComponentDataBean())): ?>
                <?= $field->getChapter() != $prevChapter ? "<h4>{$field->getChapter()}</h4>" : '' ?>
                <?php $this->insert($templateFolder . '::' . $field->getTemplate(), [
                    'templateFolder' => $templateFolder,
                    'field' => $field,
                    'data' => $model->getComponentDataBean(),
                    'errors' => $model->getValidationHelper()->getErrorList($field->getKey()),
                ]) ?>
            <?php endif; ?>
            <?php if ($key === count($fields) - 1 || !$fields[$key + 1]->isAppendToPrevious()): ?>
                </div>
            <?php endif ?>
            <?php $prevChapter = $field->getChapter() ?>
        <?php endforeach ?>
    </div>
    <input type="hidden" name="token" value="<?= $token ?? '' ?>">
</form>
