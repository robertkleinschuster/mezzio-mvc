<div class="form-group form-check">
    <input type="checkbox" class="form-check-input <?= is_array($errors) && count($errors) ? ' is-invalid ' : '' ?>"
           id="<?= $field->getKey($data) ?>"
           name="<?= $field->getKey($data) ?>"
           value="<?= $field->getValue($data) ?>"
        <?=$field->isRequired() ? ' required' : ''?>
        <?= $field->isChecked($data) ? ' checked' : '' ?>>
    <label class="form-check-label" for="<?= $field->getKey($data) ?>"><?= $field->getName($data) ?></label>
    <?php if (is_array($errors)): ?>
        <?php foreach ($errors as $error): ?>
            <div id="<?= $field->getKey($data) ?>_Error" class="invalid-feedback">
                <?= $error ?>
            </div>
        <?php endforeach ?>
    <?php endif ?>
    <?php if ($field->hasHint()): ?>
        <small id="<?= $field->getKey($data) ?>__hint"
               class="form-text text-muted"><?= $field->getHint($data) ?></small>
    <?php endif; ?>
</div>
