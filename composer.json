{
    "name": "robertkleinschuster/mvc",
    "description": "",
    "license": "BSD-3-Clause",
    "keywords": [
        "mvc"
    ],
    "support": {
        "issues": "https://github.com/robertkleinschuster/mvc/issues",
        "source": "https://github.com/robertkleinschuster/mvc",
        "rss": "https://github.com/robertkleinschuster/mvc/releases.atom",
        "forum": "https://discourse.laminas.dev/"
    },
    "repositories": [

    ],
    "require": {
        "php": "^7.4",
        "laminas/laminas-diactoros": "^2.4",
        "mezzio/mezzio": "^3.2.1",
        "mezzio/mezzio-helpers": "^5.3",
        "pfaciana/tiny-html-minifier": "^3.0",
        "robertkleinschuster/nice-beans": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Mvc\\": "src//"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mvc\\": "test//"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "laminas": {
            "module": "Mvc"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
